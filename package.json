{
  "name": "lelwel",
  "displayName": "lelwel",
  "version": "0.1.1",
  "description": "lelwel language server",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "language",
    "lelwel",
    "lsp",
    "wasm"
  ],
  "license": "MIT",
  "author": "Daniel Pfister",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x2a-42/vscode-lelwel"
  },
  "publisher": "0x2a-42",
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "bun build:production",
    "build": "bun build ./src/extension.ts --outdir ./dist --target node --format cjs --external vscode --sourcemap --bundle --minify",
    "build:production": "bun build-wasm && bun build ./src/extension.ts --outdir ./dist --target node --format cjs --external vscode --minify --sourcemap",
    "build:dev": "bun build-wasm && bun build ./src/extension.ts --outdir ./dist --target node --format cjs --external vscode --sourcemap",
    "build-wasm": "bun build-wasm:prepare && bun build-wasm:compile && bun build-wasm:copy",
    "build-wasm:prepare": "bun scripts/build-stable.mjs prepare",
    "build-wasm:compile": "cd lelwel && cargo rustc --features=lsp --bin=lelwel-ls --release --target wasm32-wasip1-threads -- -Clink-arg=--initial-memory=10485760 -Clink-arg=--max-memory=131072000",
    "build-wasm:copy": "bun scripts/build-stable.mjs copy",
    "compile": "bun build ./src/extension.ts --outdir ./dist --target node --format cjs --external vscode --sourcemap --bundle --minify",
    "watch": "bun build ./src/extension.ts --outdir ./dist --target node --format cjs --external vscode --sourcemap --bundle --watch",
    "dev": "bun build-wasm && bun watch",
    "dev:fast": "bun build-wasm && bun watch --no-clear",
    "pretest": "bun type-check && bun compile && bun lint",
    "type-check": "bun x tsc --noEmit",
    "lint": "bun x oxlint",
    "lint:fix": "bun x oxlint --fix",
    "format": "bun x oxfmt --write src/**/*.{ts,js,json}",
    "package": "bun x vsce package --no-dependencies",
    "watch:wasm": "echo 'WASM Watch: Install watchexec-cli: cargo install watchexec-cli, then run bun run watch:wasm:watchexec'",
    "watch:wasm:watchexec": "watchexec -r -e rs -- bun run build-wasm",
    "watch:wasm:simple": "echo 'Manual WASM build: Run bun run build-wasm after modifying Rust files'",
    "dev:hot": "bun build-wasm && bun concurrently 'bun --watch src/extension.ts --watch src/test/**/*.ts' 'bun watch:wasm:watchexec'",
    "dev:hot:simple": "bun build-wasm && bun --watch src/extension.ts --watch src/test/**/*.ts",
    "clean": "bun rm dist server .tsbuildinfo coverage && cd lelwel && cargo clean",
    "test": "bun test",
    "test:unit": "bun test src/test/unit/",
    "test:integration": "bun test src/test/integration/",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@vscode/wasm-wasi": "1.0.1",
    "@vscode/wasm-wasi-lsp": "0.1.0-pre.8",
    "vscode-languageclient": "9.0.1"
  },
  "devDependencies": {
    "@types/node": "25.3.1",
    "@types/vscode": "1.107.0",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "@vscode/vsce": "3.7.1",
    "bun-types": "1.3.10",
    "concurrently": "9.2.1",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "typescript": "5.9.3"
  },
  "contributes": {
    "commands": [
      {
        "command": "lelwel.formatDocument",
        "title": "Format Lelwel Document",
        "category": "Lelwel"
      }
    ],
    "keybindings": [
      {
        "command": "lelwel.formatDocument",
        "key": "alt+shift+f",
        "mac": "alt+shift+f",
        "when": "editorLangId == lelwel"
      }
    ],
    "languages": [
      {
        "id": "lelwel",
        "aliases": [
          "lelwel",
          "lelwel"
        ],
        "extensions": [
          ".llw"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lelwel",
        "scopeName": "source.lelwel",
        "path": "./syntaxes/lelwel.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Lelwel",
      "type": "object",
      "properties": {
        "lelwel.nativeLsp": {
          "type": "boolean",
          "default": false,
          "description": "Connect to a 'lelwel-ls' binary, instead of using the embedded language server."
        },
        "lelwel.format.maxLineWidth": {
          "type": "number",
          "default": 100,
          "minimum": 40,
          "maximum": 200,
          "description": "Maximum line width for formatting lelwel documents (based on dprint-core)."
        },
        "lelwel.format.useTabs": {
          "type": "boolean",
          "default": false,
          "description": "Use tabs for indentation instead of spaces (based on dprint-core). Note: Currently not supported by the formatter."
        },
        "lelwel.format.newLine": {
          "type": "string",
          "enum": ["lf", "crlf"],
          "default": "lf",
          "description": "Line ending style: 'lf' for \\n, 'crlf' for \\r\\n (based on dprint-core). Note: Currently not supported by the formatter."
        }
      }
    }
  },
  "activationEvents": [],
  "extensionDependencies": [
    "ms-vscode.wasm-wasi-core"
  ],
  "engines": {
    "bun": ">=1.3.9",
    "vscode": "^1.107.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": {
      "supported": true
    }
  }
}
